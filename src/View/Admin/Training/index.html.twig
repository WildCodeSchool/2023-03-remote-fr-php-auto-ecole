{% extends "Admin/layout.html.twig" %}

{% block content %}
    <h1>Toutes les formations</h1>
    <a href="/admin/trainings/add" role="button">+ ajouter</a>
    <table role="grid">
		<thead>
			<tr>
				<th>ID</th>
				<th>Titre</th>
                <th></th>
			</tr>
		</thead>
		<tbody>
			{% for training in trainings %}
				<tr>
					<td>{{training.id}}</td>
					<td>
                        <a href="/admin/trainings/edit?id={{training.id}}">
							{{training.title}}
						</a>
                    </td>
                    <td>
                        <a class="success" href="/admin/trainings/edit?id={{training.id}}">
							modifier
						</a> | 
						<a class="danger" href="/admin/trainings/delete?id={{training.id}}">
							supprimer
						</a>
                    </td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}