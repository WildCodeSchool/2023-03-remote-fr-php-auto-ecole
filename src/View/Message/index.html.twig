{% extends "layout.html.twig" %}

{% block content %}
	<form method="post">
		<h1>Demande d'informations</h1>
		<label for="email" >
			Email
			<input type="email" id="email" name="email" >
		</label>
		<label for="training">
			Choisissez votre formation
			
			<select name="training_id" id="training">
			{% for training in trainings %}
				<option value="{{training.id}}">{{training.title}}</option>
			{% endfor %}
			</select>
		</label>
		<fieldset>
			<legend>Informations sur les permis</legend>
			<p>
				Vous souhaitez des informations compl√©mentaires sur certains permis ?
				<br>
				Choisissez dans la liste ci-dessous.
			</p>
			{% for licence in licences %}	
				<label for="licence{{licence.id}}">
					<input type="checkbox" id="licence{{licence.id}}" name="licences[]" value="{{licence.id}}">
					{{licence.title}}
				</label>
			{% endfor %}
		</fieldset>

		<label for="content">
			Message
			<textarea name="content" id="content" rows="5"></textarea>
		</label>
		<button type="submit">Envoyer</button>
	</form>
{% endblock %}
